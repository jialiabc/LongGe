<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/tab_group"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:id="@+id/edit_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_background"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/manage_add" />

                <EditText
                    android:id="@+id/edit_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button"
                    android:text="@string/send" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/user_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/user1_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/user1_iv"
                        android:text="@string/user_1"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/user1_iv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/xiaoming" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/user2_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/user2_iv"
                        android:text="@string/user_2"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/user2_iv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/xiaohong" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/tab_group">

            <LinearLayout
                android:id="@+id/picture"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="照  片"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vedio"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/picture"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/vedio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="小视频"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/take_pic"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/vedio"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/take_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="照   相"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tape"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/take_pic"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recordPic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/tape" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="录   音"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager

        android:id="@+id/view_paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout">

    </android.support.v4.view.ViewPager>


</RelativeLayout>
